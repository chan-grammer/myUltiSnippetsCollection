# SCHEMA BUILDER SNIPPETS
snippet fk "add foreign key"
$table->integer('${1:foreign_key}')->unsigned();
$table->foreign('$1')
	  ->references('${2:referredKey}')
	  ->on('${3:referredTable}')
	  ->onDelete('cascade');
endsnippet
