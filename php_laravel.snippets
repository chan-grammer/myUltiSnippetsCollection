# ROUTE SNIPPETS
snippet r:c "routing using closure"
Route::${1:routeVerb}('${2:path}', ['as' => '${3:routName}', function() {
	$0
}]);
$0
endsnippet

snippet r:ctrl "routing using controllers"
Route::${1:routeVerb}('${2:path}', [
	'as' => '${3:routName}',
	'uses' => '${4:controllerAction}'
]);
$0
endsnippet

